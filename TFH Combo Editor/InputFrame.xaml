<UserControl x:Class="TFH_Combo_Editor.InputFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TFH_Combo_Editor"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid Background="White">
        <CheckBox x:Name="checkBoxA" Content="A" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="93,10,0,0" IsChecked="{Binding aChecked, Mode=TwoWay}"/>
        <CheckBox x:Name="checkBoxB" Content="B" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="126,10,0,0" IsChecked="{Binding bChecked, Mode=TwoWay}"/>
        <CheckBox x:Name="checkBoxC" Content="C" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="158,10,0,0" IsChecked="{Binding cChecked, Mode=TwoWay}"/>
        <CheckBox x:Name="checkBoxD" Content="D" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,10,0,0" IsChecked="{Binding dChecked, Mode=TwoWay}"/>
    </Grid>
</UserControl>
